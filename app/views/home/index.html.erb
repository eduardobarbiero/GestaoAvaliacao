<legend>Últimos envios de formulários</legend>
<div class="container">
  <div class="row">
    <div class="col-md-7 col-md-offset-0">
      <div id="boxsearch">
        <div class="group wat-cf">
          <%= form_tag '/home', :method => 'get' do %>
              <table>
                <tr>
                  <td>
                    <div class="left">
                      <%= text_field '', 'procura', :class => "form-control", :size => 50 %>
                    </div>
                  </td>
                  <td>
                    <div class="right">
                      <button class="btn btn-default" type="submit">
                        <%= image_tag "search.png" %>
                        Buscar
                      </button>
                    </div>
                  </td>
                </tr>
              </table>
          <% end %>
        </div>
      </div>
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Corpo</th>
        </tr>
        </thead>

        <tbody>
        <% @candidatos_emails.each do |candidato| %>
            <tr>
              <td><%= candidato.candidato.nome %></td>
              <td><%= candidato.candidato.email %></td>
              <td><%= candidato.email.corpo %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <br>
    </div>
  </div>
</div>
<%= paginate @candidatos_emails, :theme => 'twitter-bootstrap-3' %>
</div>
