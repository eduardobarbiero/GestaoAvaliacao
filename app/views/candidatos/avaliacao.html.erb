<div class="row">
  <legend>Avaliação de Candidatos</legend>
  <div class="col-md-7 col-md-offset-0">
    <%= form_for(@candidato) do |f| %>
        <h4>Dados do candidato:</h4>
        <div class="form-group">
          <%= f.label :nome %><br>
          <%= f.text_field :nome, class: "form-control", required: :required %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.email_field :email, class: "form-control", required: :required %>
        </div>
        <h4>Avalie de 0 a 10 o seu nível de conhecimento sobre as tecnologias a seguir:</h4>
        <div class="row">
          <% @conhecimentos.each do |conhecimento |%>
            <div class="col-md-6 col-md-offset-0">
              <%= f.label conhecimento.nome %><br>
              <%= number_field 'conhecimento', conhecimento.id, class: "form-control", :placeholder => "Nível", :width => '50px', max: 10, min: 0 %>
            </div>
          <% end %>
        </div>
        <br>
        <div class="form-group">
          <%= f.button "Salvar", class: "btn btn-primary"%>
        </div>


    <% end %>
  </div>
</div>
