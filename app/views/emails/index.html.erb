<legend>Respostas Avaliativas</legend>
<div class="container">
  <div class="row">
    <div class="col-md-9 col-md-offset-0">
      <div class="form-group">
        <%= link_to 'Novo', new_email_path, class: "btn btn-default" %>
      </div>
      <div id="boxsearch">
        <div class="group wat-cf">
          <%= form_tag '/emails', :method => 'get' do %>
              <table>
                <tr>
                  <td>
                    <div class="left">
                      <%= text_field '', 'procura', :class => "form-control", :size => 50 %>
                    </div>
                  </td>
                  <td>
                    <div class="right">
                      <button class="btn btn-default" type="submit">
                        <%= image_tag "search.png" %>
                        Buscar
                      </button>
                    </div>
                  </td>
                </tr>
              </table>
          <% end %>
        </div>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Título</th>
            <th>Corpo</th>
            <th>Nota Minima</th>
            <th>Nota Máxima</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @emails.each do |email| %>
            <tr>
              <td><%= email.titulo %></td>
              <td><%= email.corpo %></td>
              <td><%= email.minima %></td>
              <td><%= email.maxima %></td>
              <td><%= link_to 'Editar', edit_email_path(email) %></td>
              <td><%= link_to 'Excluir', email, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
    </div>
  </div>
</div>
<%= paginate @emails, :theme => 'twitter-bootstrap-3' %>
</div>
