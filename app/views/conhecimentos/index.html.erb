<legend>Conhecimentos</legend>
<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-0">
      <div class="form-group">
        <%= link_to 'Novo', new_conhecimento_path, class: "btn btn-default" %>
      </div>
      <div id="boxsearch">
        <div class="group wat-cf">
          <%= form_tag '/conhecimentos', :method => 'get' do %>
              <table>
                <tr>
                  <td>
                    <div class="left">
                      <%= text_field '', 'procura', :class => "form-control", :size => 50 %>
                    </div>
                  </td>
                  <td>
                    <div class="right">
                      <button class="btn btn-default" type="submit">
                        <%= image_tag "search.png" %>
                        Buscar
                      </button>
                    </div>
                  </td>
                </tr>
              </table>
          <% end %>
        </div>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @conhecimentos.each do |conhecimento| %>
            <tr>
              <td><%= conhecimento.nome %></td>
              <td><%= link_to 'Editar', edit_conhecimento_path(conhecimento) %></td>
              <td><%= link_to 'Excluir', conhecimento, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <br>
    </div>
  </div>
</div>
<%= paginate @conhecimentos, :theme => 'twitter-bootstrap-3' %>
</div>
